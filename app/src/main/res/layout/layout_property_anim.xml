<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_value_animator_ofint"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"

        android:text="value_animator_ofint"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <com.muhaitain.androidinterview.propertyanimation.PropertyView_01
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_ObjectAnimator_alpha"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"

        android:layout_marginTop="20dp"
        android:text="透明度"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_value_animator_ofint" />

    <Button
        android:id="@+id/bt_ObjectAnimator_rotation"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"

        android:layout_marginTop="72dp"
        android:text="旋转"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_ObjectAnimator_alpha" />

    <Button
        android:id="@+id/bt_ObjectAnimator_translationX"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"

        android:layout_marginTop="104dp"
        android:text="平移"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_ObjectAnimator_rotation" />

    <Button
        android:id="@+id/bt_ObjectAnimator_scaleX"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"

        android:layout_marginTop="36dp"
        android:text="缩放"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_ObjectAnimator_translationX" />
</android.support.constraint.ConstraintLayout>